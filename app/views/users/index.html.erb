<h1>Your Family</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Family Member</th>
      <th>Email</th>
      <th>Mobile</th>
      <th>DOB</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.mobile %></td>
        <td><%= user.dob %></td>
        <td><%= link_to 'Edit', edit_user_path(user)%></td>
        <td><%= link_to 'Delete', user, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "Go to Your Profile Page", user_path(current_user), class: "btn btn-md btn-primary" %>

<%= link_to 'Log In', new_session_path if !current_user%>
