<h1>Welcome to Your FamBook!</h1>

<table>
  <thead>
    <tr>
      <th>Family Member</th>
      <th>Email</th>
      <th>Mobile</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.mobile %></td>
        <td><%= user.address %></td>
        <td><%= link_to 'Show', user %></td>
        <% if current_user == user %>
          <td><%= link_to 'Edit', edit_user_path(user)%></td>
          <td><%= link_to 'Delete', user, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
