<%= provide(:title, 'Sign Up') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :address %>
      <%= f.text_field :address %>

      <%= f.label :mobile %>
      <%= f.text_field :mobile %>

      <%= f.label :dob %>
      <%= f.date_select :dob, :start_year => 1900, :end_year => Date.today.year %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>

      <% if !current_user %>
        <%= f.submit "Create my account", class: "btn btn-primary" %>
      <% else %>
       <%= link_to 'Edit my profile', user_path , class: "btn btn-primary"%>
      <% end %>
    <% end %>
  </div>
</div>


<%= link_to 'Back to Home Page', root_path %>
