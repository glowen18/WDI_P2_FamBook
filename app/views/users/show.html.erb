<%= provide(:title, @user.name.capitalize) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
    <h1><%= @user.name.capitalize %></h1>
    </section>
  </aside>
</div>
<p>This is where you will see stories, pics and videos.</p>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Family Member</th>
      <th>Email</th>
      <th>Mobile</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @user.name %></td>
      <td><%= @user.email %></td>
      <td><%= @user.mobile %></td>

      <% if current_user == @user %>
        <td><%= link_to 'Edit', edit_user_path(@user)%></td>
        <td><%= link_to 'Delete', @user, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      <% end %>
    </tr>
  </tbody>
</table>

<%= render 'boards/form' %>

