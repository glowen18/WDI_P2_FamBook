<p id=:notice><%= notice %></p>

<h1>Your Family Board</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Story Title</th>
      <th>Edit</th>
      <th>Delete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.name %></td>
        <% if board.stories.count > 0 %>
          <td><%= link_to board.stories.first.title, board_story_path(board, board.stories.first) %></td>
        <% else %>
          <td><em>This board has no stories yet.</em></td>
        <% end %>
        <td><%= link_to 'Rename this Board', edit_board_path(board) %></td>
        <td><%= link_to 'Delete this Board', board_path(board), method: :delete, data: {confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Board', new_board_path %>
<%= link_to 'Back to Home Page', root_path, class: "btn btn-md btn-primary" %>

<%= link_to "Go to Your FamBook Page!", user_path(current_user), class: "btn btn-md btn-primary" %>
