<h1>Your Family Board</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.name %></td>
        <td><%= link_to 'Show your Board', board %></td>
        <td><%= link_to 'Edit your Board', edit_board_path(board) %></td>
        <td><%= link_to 'Delete your Board', board, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  </tbody>
</table>

<br>

<%= link_to 'New Board', new_board_path %>
